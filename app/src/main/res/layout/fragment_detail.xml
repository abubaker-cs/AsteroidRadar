<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="asteroid"
            type="com.udacity.asteroidradar.data.model.Asteroid"
            />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        >

        <!-- Thumbnail: Asteroid Image -->
        <ImageView
            android:id="@+id/daily_thumbnail_image"
            style="@style/details_thumbnail_style"
            android:contentDescription="@string/hazard_status"
            app:asteroidStatusImage="@{asteroid.potentiallyHazardous}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/asteroid_safe"
            />

        <ScrollView
            style="@style/details_sv_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_thumbnail_image"
            >

            <!-- Close Approach Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        style="@style/details_desc_style"
                        android:text="@string/close_approach_data_title"
                        />

                    <TextView
                        android:id="@+id/close_approach_date"
                        style="@style/details_value_style"
                        android:text="@{asteroid.closeApproachDate}"
                        tools:text="2020-02-01"
                        />
                </LinearLayout>

                <!-- Absolute Magnitude -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/details_desc_style"
                            android:text="@string/absolute_magnitude_title"
                            />

                        <TextView
                            android:id="@+id/absolute_magnitude"
                            style="@style/details_value_style"
                            app:astronomicalUnitText="@{asteroid.absoluteMagnitude}"
                            tools:text="25.126 au"
                            />
                    </LinearLayout>

                    <!-- Icon: Help Button -->
                    <ImageView
                        android:id="@+id/help_button"
                        style="@style/details_help_icon_style"
                        android:contentDescription="@string/help_button_desc"
                        app:srcCompat="@drawable/ic_help_circle"
                        />

                </LinearLayout>

                <!-- Estimated Diameter -->
                <TextView
                    style="@style/details_desc_style"
                    android:text="@string/estimated_diameter_title"
                    />

                <TextView
                    android:id="@+id/estimated_diameter"
                    style="@style/details_value_style"
                    app:kmUnitText="@{asteroid.estimatedDiameter}"
                    tools:text="0.82 km"
                    />

                <!-- Relative Velocity -->
                <TextView
                    style="@style/details_desc_style"
                    android:text="@string/relative_velocity_title"
                    />

                <TextView
                    android:id="@+id/relative_velocity"
                    style="@style/details_value_style"
                    app:velocityText="@{asteroid.relativeVelocity}"
                    tools:text="11.9 km/s"
                    />

                <!-- Distance from earth -->
                <TextView
                    style="@style/details_desc_style"
                    android:text="@string/distance_from_earth_title"
                    />

                <TextView
                    android:id="@+id/distance_from_earth"
                    style="@style/details_value_style"
                    app:astronomicalUnitText="@{asteroid.distanceFromEarth}"
                    tools:text="0.0924 au"
                    />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
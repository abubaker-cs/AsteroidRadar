<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="asteroid"
            type="com.udacity.asteroidradar.data.model.Asteroid"
            />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_base"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_base"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_card"
            android:padding="@dimen/card_padding"
            >

            <!-- Asteroid Name -->
            <TextView
                android:id="@+id/codenameTextView"
                android:layout_width="@dimen/width_null"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt_padding"
                android:padding="@dimen/txt_padding"
                android:textColor="@color/text_yellow"
                android:textSize="@dimen/item_name_txt_size"
                app:codeName="@{asteroid}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Asteroid Name"
                />

            <!-- Date -->
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="@dimen/width_null"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/txt_padding"
                android:layout_marginBottom="@dimen/unit_16"
                android:padding="@dimen/txt_padding"
                android:text="@{asteroid.closeApproachDate}"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/item_date_txt_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/codenameTextView"
                tools:text="Date"
                />

            <!-- Status Icon -->
            <ImageView
                android:id="@+id/icon_hazard_status"
                android:layout_width="@dimen/item_thumbnail_width"
                android:layout_height="@dimen/item_thumbnail_height"
                android:layout_margin="@dimen/unit_16"
                android:contentDescription="@string/list_item_thumbnail_desc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:statusIcon="@{asteroid.potentiallyHazardous}"
                tools:srcCompat="@tools:sample/avatars"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
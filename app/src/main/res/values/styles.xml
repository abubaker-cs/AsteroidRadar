<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Details: Item Description -->
    <style name="details_desc_style">
        <item name="android:layout_marginTop">@dimen/tv_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_yellow</item>
        <item name="android:textSize">@dimen/list_tv_desc_size</item>
    </style>

    <!-- Details: Item Value -->
    <style name="details_value_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/list_tv_value_size</item>
    </style>

    <!-- Details: Help Icon -->
    <style name="details_help_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/iv_padding</item>
    </style>

    <!-- Details: ScrollView -->
    <style name="details_sv_style">
        <item name="android:layout_width">@dimen/width_null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sv_padding</item>
    </style>

    <!-- Details: Thumbnail -->
    <style name="details_thumbnail_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- List: Thumbnail (Image) -->
    <style name="list_thumbnail_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- List: Thumbnail Description -->
    <style name="list_thumbnail_desc_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/thumbnail_desc_bg</item>
        <item name="android:padding">@dimen/thumbnail_desc_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/daily_thumbnail_desc_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- List: FrameLayout -->
    <style name="list_fl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/daily_thumbnail_wrapper_height</item>
    </style>

    <!-- List: RecyclerView -->
    <style name="list_rv_style">
        <item name="android:layout_width">@dimen/width_null</item>
        <item name="android:layout_height">@dimen/height_null</item>
        <item name="android:paddingTop">@dimen/rv_padding_top</item>
    </style>

    <!-- List: ProgressBar -->
    <style name="list_pb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Item: CardView -->
    <style name="item_cv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_base</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_base</item>
    </style>

    <!-- Item: Asteroid Name -->
    <style name="item_asteroid_name_style">
        <item name="android:layout_width">@dimen/width_null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/txt_padding</item>
        <item name="android:padding">@dimen/txt_padding</item>
        <item name="android:textColor">@color/text_yellow</item>
        <item name="android:textSize">@dimen/item_name_txt_size</item>
    </style>

    <!-- Item: Asteroid Date -->
    <style name="item_asteroid_date_style">
        <item name="android:layout_width">@dimen/width_null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/txt_padding</item>
        <item name="android:layout_marginBottom">@dimen/tv_margin</item>
        <item name="android:padding">@dimen/txt_padding</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/item_date_txt_size</item>
    </style>

    <!-- Item: Asteroid Hazard Status -->
    <style name="item_asteroid_hazard_status_icon_style">
        <item name="android:layout_width">@dimen/item_thumbnail_width</item>
        <item name="android:layout_height">@dimen/item_thumbnail_height</item>
        <item name="android:layout_margin">@dimen/hazard_status_icon_margin</item>
        <item name="android:contentDescription">@string/list_item_thumbnail_desc</item>
    </style>


</resources>
